<?xml version="1.0" encoding="utf-8" standalone="no"?>
<MapbuilderConfig version="0.2.1" id="contextEditorDemoConfig" 
      xmlns="http://mapbuilder.sourceforge.net/mapbuilder" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:schemaLocation="http://mapbuilder.sourceforge.net/mapbuilder ../../lib/schemas/config.xsd">
  <!--
    Description: This configuration file determines what components from the
                 Mapbuilder library are to be included in a Main Mapbuilder web
                 page.
    Licence:     LGPL as per: http://www.gnu.org/copyleft/lesser.html 

    $Id: config.xml 2548 2007-01-24 09:00:03Z gjvoosten $
  -->
	<models>
		<OwsContext id="mainMap">
			<defaultModelUrl>data/context.xml</defaultModelUrl>
<!--<defaultModelUrl>../data/context/mars.xml</defaultModelUrl>-->


			<widgets>
				<MapPaneOL id="mainMapWidget">
					<htmlTagId>mainMapPane</htmlTagId>
					<mapContainerId>mainMapContainer</mapContainerId>
<!--					<scriptFile>../../sldEditor2.0/widget/MapPane.js</scriptFile>-->
<!--					<stylesheet>../../lib/widget/MapPane.xsl</stylesheet>-->
				</MapPaneOL>
        		
        		
        		<LayerControl id="contextLegend">
		          	<htmlTagId>workspace</htmlTagId>
		          	<outputNodeId>workspaceCanvas</outputNodeId>
          			<stylesheet>../../lib/widget/LayerControlSld.xsl</stylesheet>
		          	<moveUpImage>/images/LayerMoveUpDisable.png</moveUpImage>
		          	<moveDownImage>/images/LayerMoveDownDisable.png</moveDownImage>
		          	<deleteImage>/images/LayerRemoveDisable.png</deleteImage>
        		</LayerControl>
		       
      		</widgets>
<!--      		 <scriptFile>model/Context.js</scriptFile>-->
    	</OwsContext>

  <StyledLayerDescriptor id="mySLD">  
  		<defaultModelUrl>data/videSld.sld</defaultModelUrl>
<!--	    <scriptFile>model/StyledLayerDescriptor.js</scriptFile>-->
	    <models>
	    	<FeatureTypeSchema id="layerTypeTemplate" template="true">
				          <widgets>
					            <LayerProperty id="layerProperty">
						              <htmlTagId>selectProperty</htmlTagId>
						              <outputNodeId>selectPropertyCanvas</outputNodeId>
						            
						        </LayerProperty>
				          </widgets>
	        </FeatureTypeSchema>
    		
	    </models>
	    <widgets>
	      	<SLDEditor id="editor">
	      		<htmlTagId>workspace</htmlTagId>
	          	<outputNodeId>workspaceCanvas</outputNodeId>
	          	 <targetModel>mainMap</targetModel>
	      	</SLDEditor>
	    </widgets>
	    <tools>
	    	<EditSLD id="editSLD">
	    		<targetModel>mainMap</targetModel>
					<debug/>
	    	</EditSLD>
	    </tools> 
  </StyledLayerDescriptor>
  
    <ContextCollection id="myMapCollection">
      <defaultModelUrl>data/mapCollection.xml</defaultModelUrl>
      <widgets>
        <CollectionList id="collectionList">
          <htmlTagId>workspace</htmlTagId>
          <outputNodeId>workspaceCanvas</outputNodeId>
          <targetModel>mainMap</targetModel>
        </CollectionList>
      </widgets>
    </ContextCollection>
    
    
    
    <!-- use this with a WFS capabilities model -->
    <WfsCapabilities id="wfsCapTemplate">
      <models>
        <FeatureTypeSchema id="featureTypeTemplate" template="true">
          <widgets>
            <FilterAttributes id="attributeFilter">
              <htmlTagId>workspace</htmlTagId>
              <outputNodeId>workspaceCanvas</outputNodeId>
            </FilterAttributes>
          </widgets>
        </FeatureTypeSchema>
        <FeatureCollection id="getFeatureTemplate" template="true">
          <method>get</method>
          <widgets>
            <GmlRendererWZ id="testGmlRenderer">
              <htmlTagId>mainMapPane</htmlTagId>
              <targetModel>mainMap</targetModel>
              <mapContainerId>mainMapContainer</mapContainerId>
              <lineColor>#FF00FF</lineColor>
              <lineWidth>1</lineWidth>
              <pointDiameter>10</pointDiameter>
            </GmlRendererWZ>
            <Legend id="wfsLegend">
              <htmlTagId>workspace</htmlTagId>
              <outputNodeId>workspaceCanvas</outputNodeId>
            </Legend>
          </widgets>
        </FeatureCollection>
      </models>
      <widgets>
        <SelectFeatureType id="featureTypes">
          <htmlTagId>workspace</htmlTagId>
          <outputNodeId>workspaceCanvas</outputNodeId>
          <toolId>wfsController</toolId>
        </SelectFeatureType>
      </widgets>
      <tools>
        <WebServiceRequest id="wfsGetFeature">
          <targetModel>getFeatureTemplate</targetModel>
          <requestName>wfs:GetFeature</requestName>
        </WebServiceRequest>
        <WebServiceRequest id="wfsDescribeFeature">
          <targetModel>featureTypeTemplate</targetModel>
          <requestName>wfs:DescribeFeatureType</requestName>
        </WebServiceRequest>
        
        <EditContext id="addLayer">
        			<targetModel>mainMap</targetModel>
        </EditContext>
        <Caps2Context id="convertCaps">
					<targetModel>mainMap</targetModel>
		</Caps2Context>
      </tools>
      <nodeSelectXpath>/wfs:WFS_Capabilities/wfs:FeatureTypeList/wfs:FeatureType</nodeSelectXpath>
    </WfsCapabilities>
    
    
    
    <WmsCapabilities id="wmsCapTemplate">
			<widgets>
				<SelectAllMapLayers id="loadAllLayers"/>
				<ModelStatus id="wmsLoadStatus">
					<htmlTagId>workspace</htmlTagId>
					<outputNodeId>workspaceCanvas</outputNodeId>
				</ModelStatus>
				<SelectMapLayers id="layerList">
					<htmlTagId>workspace</htmlTagId>
					<outputNodeId>workspaceCanvas</outputNodeId>
				</SelectMapLayers>
			</widgets>
			<tools>
				<Caps2Context id="convertCaps">
					<targetModel>mainMap</targetModel>
				</Caps2Context>
        		<EditContext id="editContext">
          			<targetModel>mainMap</targetModel>
        		</EditContext>
			</tools>
			<nodeSelectXpath>//Layer</nodeSelectXpath>
	</WmsCapabilities>
 </models>
 <widgets>
    <TabbedContent id="tabBar">
       <tab>layerList</tab>
      <tab>contextLegend</tab> 
      <tab>featureTypes</tab>
      <tab>collectionList</tab>
      <tab>editor</tab>
    </TabbedContent>
    <ModelUrlInput id="urlInputWfs">
      <targetModel>wfsCapTemplate</targetModel>
      <defaultUrl>http://localhost:8080/geoserver/wfs/GetCapabilities</defaultUrl>
    </ModelUrlInput>
    <ModelUrlInput id="urlInputWms">
      <targetModel>wmsCapTemplate</targetModel>
      <defaultUrl>http://localhost:8080/geoserver/wms/GetCapabilities</defaultUrl>
    </ModelUrlInput>
   
 
  
  </widgets>
  <!--
    All static images should be relative to this URL.
    This dir is relative the dir of the main html file.
  -->
	<skinDir>../../lib/skin/default</skinDir>
	<widgetTextUrl>/widgetText.xml</widgetTextUrl>	
	<proxyUrl>http://localhost/proxy</proxyUrl>
<!--	 in the skin dir -->
</MapbuilderConfig>
