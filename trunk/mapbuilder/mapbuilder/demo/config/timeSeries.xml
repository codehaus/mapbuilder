<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<MapbuilderConfig version="0.2.1" id="simpleTemplate" 

    xmlns="http://mapbuilder.sourceforge.net/mapbuilder" 

    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 

    xsi:schemaLocation="http://mapbuilder.sourceforge.net/mapbuilder ../../lib/schemas/config.xsd">

    

  <models>



    <Context id="mainMap">

      <defaultModelUrl>context/tsChinaDustStorm.xml</defaultModelUrl>

      

      <widgets>

        <TimeSeries id="mainMapWidget">

          <stylesheet>../lib/widget/MapPane.xsl</stylesheet>

          <htmlTagId>mainMapPane</htmlTagId>

          <mapContainerId>mainMapContainer</mapContainerId>

        </TimeSeries>

				<AoiBoxWZ id="aoiBox2">

					<htmlTagId>mainMapPane</htmlTagId>

					<stylesheet>../lib/widget/GmlRenderer.xsl</stylesheet>

					<lineColor>#FF0000</lineColor>

					<lineWidth>1</lineWidth>

					<crossSize>15</crossSize>

					<mapContainerId>mainMapContainer</mapContainerId>

				</AoiBoxWZ>

        <Timestamp id="timestamp"/>

        <Legend id="legend">

        </Legend>

        <Widget id="abstract">

          <stylesheet>../lib/widget/Abstract.xsl</stylesheet>

        </Widget>

        <Widget id="mapTitle">

          <stylesheet>../lib/widget/MapTitle.xsl</stylesheet>

        </Widget>

        

      </widgets>

      <tools> 

        <AoiMouseHandler id="aoiHandler"/>

        <MovieLoop id="movieLoop"/>

      </tools> 

    </Context>

      

    <ContextCollection id="collection">

      <defaultModelUrl>context/timeSeriesCollection.xml</defaultModelUrl>

      <widgets>

        <CollectionList id="collectionList">

          <targetModel>mainMap</targetModel>

        </CollectionList>

      </widgets>

    </ContextCollection>

    

  </models>



  <widgets>

    <Button id="rewind">

      <buttonBar>tsButtonBar</buttonBar>

      <targetModel>mainMap</targetModel>

      <action>movieLoop.rewind()</action>

      <class>Button</class>

      <disabledSrc>/images/RewindDisable.gif</disabledSrc>

      <tooltip xml:lang="en">click to rewind to the beginning</tooltip>

      <tooltip xml:lang="fr">click to rewind to the beginning -fr</tooltip>

    </Button>

    <Button id="play">

      <buttonBar>tsButtonBar</buttonBar>

      <targetModel>mainMap</targetModel>

      <action>movieLoop.play()</action>

      <class>RadioButton</class>

      <disabledSrc>/images/PlayDisable.gif</disabledSrc>

      <enabledSrc>/images/PlayEnable.gif</enabledSrc>

      <tooltip xml:lang="en">click to run the movie</tooltip>

      <tooltip xml:lang="fr">click to run the movie -fr</tooltip>

    </Button>

    <Button id="pause">

      <buttonBar>tsButtonBar</buttonBar>

      <targetModel>mainMap</targetModel>

      <action>movieLoop.pause()</action>

      <class>RadioButton</class>

      <disabledSrc>/images/PauseDisable.gif</disabledSrc>

      <enabledSrc>/images/PauseEnable.gif</enabledSrc>

      <tooltip xml:lang="en">click to pause the movie</tooltip>

      <tooltip xml:lang="fr">click to pause the movie -fr</tooltip>

    </Button>

    <Button id="stop">

      <buttonBar>tsButtonBar</buttonBar>

      <targetModel>mainMap</targetModel>

      <action>movieLoop.stop()</action>

      <class>RadioButton</class>

      <disabledSrc>/images/StopDisable.gif</disabledSrc>

      <enabledSrc>/images/StopEnable.gif</enabledSrc>

      <tooltip xml:lang="en">click to stop the movie</tooltip>

      <tooltip xml:lang="fr">click to stop the movie -fr</tooltip>

    </Button>

    <Save id="save">

      <buttonBar>tsButtonBar</buttonBar>

      <targetModel>mainMap</targetModel>

      <class>Button</class>

      <disabledSrc>/images/SaveDisable.gif</disabledSrc>

      <tooltip xml:lang="en">click to save this map</tooltip>

      <tooltip xml:lang="fr">cliquer pour sauvegarder</tooltip>

      <popupWindowName>modelXML</popupWindowName>

    </Save>

  </widgets>

  <skinDir>../lib/skin/default</skinDir>

  <proxyUrl>/mapbuilder/proxy</proxyUrl>

  <serializeUrl>/mapbuilder/writeXml</serializeUrl>



</MapbuilderConfig>

