<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<MapbuilderConfig id="referenceTemplate">
  <!--
    Description: This configuration file determines what components from the
                 Mapbuilder library are to be included in a Main Mapbuilder web
                 page.
    Licence:     GPL as per: http://www.gnu.org/copyleft/gpl.html 

    $Id$
  -->

  <!-- 
  these not loaded on client side, but this file can be used to include these server-side
  -->
  <requires>/util/Sarissa/sarissa.js</requires>
  <requires>/util/Util.js</requires>

  <!--
  all static images should be relative to this URL
  -->
  <skinDir>/mapbuilder/lib/skin/default</skinDir>

  <!--
  all scriptfile and stylesheets are prepended by this URL.  This can be a
  relative URL (relative to the HTML page that initializes config, but relative
  URL doesn't work in IE6.  It can also be a full URL with protocol and port 
  however that would require a proxy loader on the server to load XML files from
  a host other than the one serving the HTML page.
  -->
  <baseDir>/mapbuilder/lib/</baseDir>
    
  <models>

    <ContextCollection>
      <scriptFile>model/Collection2.js</scriptFile>
    </ContextCollection>
    
    <Context>
      <scriptFile>model/Context2.js</scriptFile>
      <scriptFile>model/Extent.js</scriptFile> 
    </Context>
    
  </models>

  <!--
  -->
  <modelGroups>
    
    <Model id="config">
      <modelType>Config</modelType>
      <defaultModelUrl>config/ConfigTemplate.xml</defaultModelUrl>
    </Model>

    <Model id="mainMapGroup">
      <modelType>Context</modelType>
      <defaultModelUrl>context/atlasWorld.xml</defaultModelUrl>
      
      <widgets>
        <MapPane id="mainMapPaneId">
          <scriptFile>widget/mappane/MapPane2.js</scriptFile>
          <stylesheet>widget/mappane/Context2MapPane2.xml</stylesheet>
          <widgets> 

            <AoiBox>
              <scriptFile>widget/tool/AoiBox2.js</scriptFile>
              <lineColor>#FF0000</lineColor>
              <lineWidth>2</lineWidth>
              <crossSize>9</crossSize>
            </AoiBox>

            <AoiMouseHandler>
              <scriptFile>widget/tool/AoiMouseHandler.js</scriptFile>
            </AoiMouseHandler>

            <!-- 
            <ZoomInHandler>
              <scriptFile>widget/tool/ZoomTool3.js</scriptFile>
              <modeValue>MODE_ZOOM_IN</modeValue>
            </ZoomInHandler>
            -->

            <CursorTrack>
              <scriptFile>widget/tool/CursorTrack.js</scriptFile>
              <scriptFile>model/Proj.js</scriptFile>
              <formName>MapDisplayForm</formName>
            </CursorTrack>

          </widgets> 
        </MapPane>
        
        <Legend id="legendId">
          <scriptFile>widget/legend/Legend2.js</scriptFile>
          <stylesheet>widget/legend/Context2Legend2.xml</stylesheet>
        </Legend>
        
        <!-- not yet working; uncomment this to try it out
        <ButtonBar id="buttonBarId">  
          <stylesheet>/widget/buttonbar/ButtonBar2.xsl</stylesheet>
          <scriptFile>/widget/buttonbar/ButtonBar3.js</scriptFile>
          <mouseWidget>MapPane</mouseWidget>
          <initialMode>MODE_ZOOM_IN</initialMode>
          <widgets>
            <Button id="ZoomInButton">
              <enabledSrc>/images/zoom_in_en.gif</enabledSrc>
              <disabledSrc>/images/zoom_in_dis.gif</disabledSrc>
              <tooltip>click and drag to zoom in</tooltip>
              <modeValue>MODE_ZOOM_IN</modeValue>
            </Button>
            <Button id="ZoomOutButton">
              <enabledSrc>/images/zoom_out_en.gif</enabledSrc>
              <disabledSrc>/images/zoom_out_dis.gif</disabledSrc>
              <tooltip>click to zoom out</tooltip>
              <modeValue>MODE_ZOOM_OUT</modeValue>
            </Button>
            <Button id="ResetButton">
              <enabledSrc>/images/reset_extent_en.gif</enabledSrc>
              <disabledSrc>/images/reset_extent_dis.gif</disabledSrc>
              <tooltip>reset the map to full extent</tooltip>
              <modeValue>MODE_RESET</modeValue>
            </Button>
          </widgets>
        </ButtonBar>
         -->

        <ToolList id="toolListId">
          <stylesheet>/widget/toollist/Config2ToolList.xsl</stylesheet>
          <scriptFile>/widget/toollist/ToolList.js</scriptFile>
          <targetWidgetGroup>config</targetWidgetGroup>
          <mouseTools>
            <Tool id="ZoomInToolId">
              <selected>true</selected>
              <enabledSrc>images/zoom_in_en.gif</enabledSrc>
              <disabledSrc>images/zoom_in_dis.gif</disabledSrc>
              <tooltip>click and drag to zoom in</tooltip>
            </Tool>
            <Tool id="ZoomOutToolId">
              <selected>false</selected>
              <enabledSrc>images/zoom_out_en.gif</enabledSrc>
              <disabledSrc>images/zoom_out_dis.gif</disabledSrc>
              <tooltip>click to zoom out</tooltip>
            </Tool>
            <Tool id="PanToolId">
              <selected>false</selected>
              <enabledSrc>images/pan_en.gif</enabledSrc>
              <disabledSrc>images/pan_dis.gif</disabledSrc>
              <tooltip>click and drag to pan</tooltip>
            </Tool>
          </mouseTools>
        </ToolList>
      </widgets>
    </Model>
      
    <Model id="locatorMapGroup">
      <modelType>Context</modelType>
      <defaultModelUrl>context/locatorMap.xml</defaultModelUrl>
      <widgets>
        <MapPane id="locatorMapId">
          <scriptFile>widget/mappane/MapPane2.js</scriptFile>
          <stylesheet>widget/mappane/Context2MapPane2.xml</stylesheet>
          <targetWidgetGroup>mainMapGroup</targetWidgetGroup>
           <widgets> 
            <AoiBox>
              <scriptFile>widget/tool/AoiBox2.js</scriptFile>
              <lineColor>#0000FF</lineColor>
              <lineWidth>1</lineWidth>
              <crossSize>5</crossSize>
            </AoiBox>
            <AoiMouseHandler>
              <scriptFile>widget/tool/AoiMouseHandler.js</scriptFile>
            </AoiMouseHandler>

          </widgets> 
        </MapPane>
      </widgets>
    </Model>
    
    <Model id="collectionGroup">
      <modelType>ContextCollection</modelType>
      <defaultModelUrl>context/demoCollection.ccml</defaultModelUrl>
      <widgets>
        <CollectionList id="collectionListId">
          <scriptFile>widget/collectionList/CollectionList2.js</scriptFile>
          <stylesheet>widget/collectionList/CollectionToList2.xsl</stylesheet>
          <targetWidgetGroup>mainMapGroup</targetWidgetGroup>
        </CollectionList>
      </widgets>
    </Model>
    
  </modelGroups>

</MapbuilderConfig>
