              <scriptFile>/widget/tool/AoiBox.js</scriptFile>
              <color>#FF000</color>
              <lineWidth>2</lineWidth>
            </AoiBox>
            
            <ButtonBar id="buttonBarId">
              <stylesheet>/widget/buttonbar/ButtonBar2.xsl</stylesheet>
              <scriptFile>/widget/buttonbar/ButtonBar.js</scriptFile>
