        <ZoomTool id="zoomToolId">
          <scriptFile>/widget/tool/ZoomTool2.js</scriptFile>
        </ZoomTool>
        
      </widgets>
    </MapPane>
      
    <CollectionList id="collectionListId">
      <scriptFile>/widget/collectionList/CollectionList2.js</scriptFile>
      <stylesheet>/widget/collectionList/CollectionToList2.xsl</stylesheet>
      <modelType>ContextCollection</modelType>
      <defaultModelUrl>/mapbuilder/demo/context/demoCollection.ccml</defaultModelUrl>
      <targetWidget>mainMapPaneId</targetWidget>
    </CollectionList>
    
  </widgets>

</MapbuilderConfig>
