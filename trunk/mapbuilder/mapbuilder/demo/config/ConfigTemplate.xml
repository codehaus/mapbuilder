<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<MapbuilderConfig id="referenceTemplate">

  <!-- 
  these not loaded on client side, but this file can be used to include these server-side
  -->
  <requires>/util/Sarissa/sarissa.js</requires>
  <requires>/util/Util.js</requires>

  <!--
  all static images should be relative to this URL
  -->
  <skinDir>/mapbuilder/lib/skin/default</skinDir>

  <!--
  all scriptfile and stylesheets are prepended by this URL
  -->
  <baseDir>/mapbuilder/lib</baseDir>
    
  <models>

    <ContextCollection>
      <scriptFile>/model/Collection2.js</scriptFile>
    </ContextCollection>
    
    <Context>
      <scriptFile>/model/Context2.js</scriptFile>
      <scriptFile>/model/Extent.js</scriptFile> 
    </Context>
    
  </models>

  <!--
  -->
  <widgets>
    
    <MapPane id="locatorMapId">
      <scriptFile>/widget/mappane/MapPane2.js</scriptFile>
      <stylesheet>/widget/mappane/Context2MapPane.xml</stylesheet>
      <modelType>Context</modelType>
      <defaultModelUrl>/mapbuilder/demo/context/locatorMap.xml</defaultModelUrl>
      <targetWidget>mainMapPaneId</targetWidget>
    </MapPane>
    
    <MapPane id="mainMapPaneId">
      <scriptFile>/widget/mappane/MapPane2.js</scriptFile>
      <stylesheet>/widget/mappane/Context2MapPane.xml</stylesheet>
      <modelType>Context</modelType>
      <defaultModelUrl>/mapbuilder/demo/context/modisWorld.xml</defaultModelUrl>
      
      <!-- contained widgets register with the parent widget's model listeners -->
      <widgets> 
      
        <Legend id="legendId">
          <scriptFile>/widget/legend/Legend2.js</scriptFile>
          <stylesheet>/widget/legend/Context2Legend2.xml</stylesheet>
        </Legend>
        
