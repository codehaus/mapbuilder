<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<MapbuilderConfig id="referenceTemplate">
  <skinDir>/mapbuilder/lib/skin/default</skinDir>

  <models>

    <Context id="firstMap">
      <defaultModelUrl>context/locatorMap.xml</defaultModelUrl>
      
      <widgets>
        <MapPane id="firstMapPane">
          <tools> 
            <AoiBox>
              <lineColor>magenta</lineColor>
              <lineWidth>2</lineWidth>
              <crossSize>25</crossSize>
            </AoiBox>
            
          </tools> 
        </MapPane>
      </widgets>
    </Context>

    <Context id="secondMap">
      <defaultModelUrl>context/mars.xml</defaultModelUrl>
      
      <widgets>
        <MapPane id="secondMapPane">
          <tools> 
            <AoiBox>
              <lineColor>#FF0000</lineColor>
              <lineWidth>1</lineWidth>
              <crossSize>15</crossSize>
            </AoiBox>
            <AoiMouseHandler/>
           
          </tools> 
        </MapPane>
      </widgets>
    </Context>
    
  </models>

</MapbuilderConfig>
