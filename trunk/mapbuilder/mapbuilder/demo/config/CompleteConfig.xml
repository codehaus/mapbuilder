<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<MapbuilderConfig version="0.2.0" id="referenceTemplate">
  <!--
    Description: This configuration file determines what components from the
                 Mapbuilder library are to be included in a Main Mapbuilder web
                 page.
    Licence:     GPL as per: http://www.gnu.org/copyleft/gpl.html 

    $Id$
  -->

  <!--
    All static images should be relative to this URL.
    This dir is relative the dir of the main html file.
  -->
  <skinDir>../lib/skin/default</skinDir>

  <!-- Url of LOCAL redirection script, required to access external URLs -->
  <proxyUrl>../server/proxy/proxy.php?url=</proxyUrl>
  <!--proxyUrl>/ql2/proxy?url=</proxyUrl-->

  <models>

    <Context id="mainMap">
      <defaultModelUrl>context/atlasWorld.xml</defaultModelUrl>
      
      <widgets>
        <MapPane id="mainMapPane">
          <tools> 
            <AoiMouseHandler/>
            <AoiBox>
              <lineColor>#FF0000</lineColor>
              <lineWidth>2</lineWidth>
              <crossSize>1</crossSize>
            </AoiBox>
            <DragPanHandler>
              <enabled>false</enabled>
            </DragPanHandler>
            <MouseClickHandler/>
          </tools> 
        </MapPane>
        
        <CursorTrack id="cursorTrack">
          <mouseHandler>mainMap.mainMapPane</mouseHandler>
        </CursorTrack>
            
        <Legend id="legend"/>
        
        <WidgetBase id="abstract">
          <stylesheet>../lib/widget/Abstract.xsl</stylesheet>
        </WidgetBase>

        <WidgetBase id="mapTitle">
          <stylesheet>../lib/widget/MapTitle.xsl</stylesheet>
        </WidgetBase>

        <AoiForm id="aoiForm">
        </AoiForm>

        <WmsCapabilitiesImport id="wmsCapabilitiesImport"/>

        <!--SearchForm id="searchForm">
        </SearchForm-->

      </widgets>
        
    </Context>
      
    <Context id="locatorMap">
      <defaultModelUrl>context/locatorMap.xml</defaultModelUrl>
      <widgets>
        <MapPane id="locatorMap">
          <fixedWidth>180</fixedWidth>
          <tools> 
            <AoiBox>
              <lineColor>red</lineColor>
              <lineWidth>1</lineWidth>
              <crossSize>15</crossSize>
            </AoiBox>
            <AoiMouseHandler/>
            <ZoomToAoi>
              <targetModel>mainMap</targetModel>
            </ZoomToAoi>
          </tools> 
        </MapPane>
      </widgets>
    </Context>
    
    <ContextCollection id="collectionGroup">
      <defaultModelUrl>context/demoCollection.xml</defaultModelUrl>
      <widgets>
        <CollectionList id="collectionList">
          <targetModel>mainMap</targetModel>
        </CollectionList>
      </widgets>
    </ContextCollection>

    <Gml2 id="gml2">
      <widgets>
        <FeatureList id="featureList"/>
      </widgets>
    </Gml2>
    
		<ModelBase id="locations">
			<defaultModelUrl>locations/Global.xml</defaultModelUrl>
			<widgets>
				<Locations id="locationsSelect">
					<targetModel>mainMap</targetModel>
					<stylesheet>../lib/widget/Locations.xsl</stylesheet>
          <tools> 
           <ZoomToAoi>
              <targetModel>mainMap</targetModel>
            </ZoomToAoi>
          </tools> 
				</Locations>
			</widgets>
		</ModelBase>
    
		<Gml2 id="ntsGml">
			<!--defaultModelUrl>gml/NTSLookup.xml</defaultModelUrl-->
			<widgets>
        <Gml2Render id="mainMapPane"/>
			</widgets>
		</Gml2>
  </models>

  <widgets>
    <ButtonBar id="buttonBar">  
      <targetModel>mainMap</targetModel>
      <tools>
        <ZoomIn id="zoomIn">
          <class>RadioButton</class>
          <selected>true</selected>
          <mouseHandler>mainMap.mainMapPane</mouseHandler>
          <dependsOn>mainMap.mainMapPane.AoiMouseHandler</dependsOn>
          <dependsOn>mainMap.mainMapPane.AoiBox</dependsOn>
          <enabledSrc>/images/ZoomInEnable.gif</enabledSrc>
          <disabledSrc>/images/ZoomInDisable.gif</disabledSrc>
          <tooltip lang="en">click and drag to zoom in</tooltip>
          <tooltip lang="fr">cliquer et faire glisser la souris pour agrandir</tooltip>
        </ZoomIn>
        <ZoomOut id="zoomOut">
          <class>RadioButton</class>
          <mouseHandler>mainMap.mainMapPane</mouseHandler>
          <dependsOn>mainMap.mainMapPane.AoiMouseHandler</dependsOn>
          <dependsOn>mainMap.mainMapPane.AoiBox</dependsOn>
          <enabledSrc>/images/ZoomOutEnable.gif</enabledSrc>
          <disabledSrc>/images/ZoomOutDisable.gif</disabledSrc>
          <tooltip lang="en">click to zoom out</tooltip>
          <tooltip lang="fr">cliquer pour réduire</tooltip>
        </ZoomOut>
        <DragPan id="dragPan">
          <class>RadioButton</class>
          <mouseHandler>mainMap.mainMapPane</mouseHandler>
          <dependsOn>mainMap.mainMapPane.DragPanHandler</dependsOn>
          <enabledSrc>/images/PanEnable.gif</enabledSrc>
          <disabledSrc>/images/PanDisable.gif</disabledSrc>
          <tooltip lang="en">click and drag to pan</tooltip>
          <tooltip lang="fr">cliquer et faire glisser la souris pour voir un autre parti de la carte</tooltip>
        </DragPan>
        <SetAoi id="setAoi">
          <class>RadioButton</class>
          <mouseHandler>mainMap.mainMapPane</mouseHandler>
          <dependsOn>mainMap.mainMapPane.AoiMouseHandler</dependsOn>
          <dependsOn>mainMap.mainMapPane.AoiBox</dependsOn>
          <enabledSrc>/images/SetAoiEnable.gif</enabledSrc>
          <disabledSrc>/images/SetAoiDisable.gif</disabledSrc>
          <tooltip lang="en">click and drag to set the area of interest</tooltip>
          <tooltip lang="fr">cliquer et faire glisser la souris pour positionner une région d'intérêt</tooltip>
        </SetAoi>
        <Reset id="reset">
          <class>Button</class>
          <disabledSrc>/images/ResetExtentDisable.gif</disabledSrc>
          <tooltip lang="en">reset the map to full extent</tooltip>
          <tooltip lang="fr">redonner à la carte ses dimensions complètes</tooltip>
        </Reset>
        <GetFeatureInfo id="getFeatureInfo">
          <class>RadioButton</class>
          <mouseHandler>mainMap.mainMapPane</mouseHandler>
          <dependsOn>mainMap.mainMapPane.MouseClickHandler</dependsOn>
          <targetFeatureCollection>gml2</targetFeatureCollection>
          <enabledSrc>/images/QueryEnable.gif</enabledSrc>
          <disabledSrc>/images/QueryDisable.gif</disabledSrc>
          <tooltip lang="en">click on feature for more info</tooltip>
          <tooltip lang="fr">cliquer pour obtenir plus d'information pour cette couche</tooltip>
        </GetFeatureInfo>
      </tools>
    </ButtonBar>
    
    <WebServiceForm id="ntsLookupForm">
			<stylesheet>../lib/widget/NtsForm.xsl</stylesheet>
			<webServiceUrl>http://geoservices.cgdi.ca/NTS/NTSLookup</webServiceUrl>
      <targetModel>ntsGml</targetModel>
    </WebServiceForm>
    
  </widgets>
      
</MapbuilderConfig>
