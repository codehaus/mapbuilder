<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<MapbuilderConfig id="referenceTemplate">
  <skinDir>/mapbuilder/lib/skin/default</skinDir>

  <models>

    <Context id="firstMap">
      <defaultModelUrl>/mapbuilder/demo/context/locatorMap.xml</defaultModelUrl>
      
      <widgets>
        <MapPane id="firstMapPane">
          <tools> 
            <AoiBox>
              <scriptFile>widget/tool/AoiBox.js</scriptFile>
              <lineColor>magenta</lineColor>
              <lineWidth>2</lineWidth>
              <crossSize>25</crossSize>
            </AoiBox>
            
          </tools> 
        </MapPane>
      </widgets>
    </Context>

    <Context id="secondMap">
      <defaultModelUrl>/ql2/contexts/mars.xml</defaultModelUrl>
      
      <widgets>
        <MapPane id="secondMapPane">
          <tools> 
            <AoiMouseHandler>
              <scriptFile>widget/tool/AoiMouseHandler.js</scriptFile>
            </AoiMouseHandler>

            <AoiBox>
              <scriptFile>widget/tool/AoiBox.js</scriptFile>
              <lineColor>#FF0000</lineColor>
              <lineWidth>1</lineWidth>
              <crossSize>15</crossSize>
            </AoiBox>
            
          </tools> 
        </MapPane>
      </widgets>
    </Context>
    
  </models>

</MapbuilderConfig>
